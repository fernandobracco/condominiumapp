<p id="notice"><%= notice %></p>

<h1>Calendário de Eventos</h1>

<%= month_calendar events: @calendarios do |date, calendarios| %>
  <%= date.strftime("%d/%m/%Y") %>

  <% calendarios.each do |calendario| %>
    <div>
      <%= link_to calendario.name, calendario%> - <%= calendario.start_time.strftime("%I:%M")%> até <%= calendario.end_time.strftime("%I:%M")%>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
    <th>Nome  </th>
    <th>Dia de Início  </th>
    <th>Dia de Fim </th>
    <th> Hora de Início - </th>
    <th> Hora de Fim</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendarios.each do |calendario| %>
      <tr>
      
      <td><%= calendario.name %></td>
        <td><%= calendario.start_time.strftime("%d/%m/%Y") %>  -  </td>
        
        <td><%= calendario.end_time.strftime("%d/%m/%Y") %>  -  </td>
        
        <td><%= calendario.start_time.strftime("%I:%M") %> até às </td>
        
        <td><%= calendario.end_time.strftime("%I:%M") %>  </td>
        
      <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                    calendario_path(calendario), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_calendario_path(calendario), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    calendario_path(calendario),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

