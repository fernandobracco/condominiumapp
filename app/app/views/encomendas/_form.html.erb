
<%= simple_form_for(@encomenda) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :arrival %>

    <% if f.object.name? %> 
      <%= f.input :departure %>
    <%end%>

    <%= f.input :name %>

    <%= f.input :apart %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
